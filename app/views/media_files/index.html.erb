<p id="notice"><%= notice %></p>

<h1>Media Files</h1>

<table>
  <thead>
    <tr>
      <th>Presentation</th>
      <th>File</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @media_files.each do |media_file| %>
      <tr>
        <td><%= media_file.presentation_id %></td>
        <td><%= media_file.file %></td>
        <td><%= link_to 'Show', [@presentation, media_file] %></td>
        <td><%= link_to 'Edit', edit_presentation_media_file_path(@presentation, media_file) %></td>
        <td><%= link_to 'Destroy', [@presentation, media_file], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Media File', new_presentation_media_file_path(@presentation) %>
