plugins: 'link image code table media charmap',
external_plugins: {
  'glyphicons': '/assets/tinymce-plugins/glyphicons.js'
},
link_list: [
  <%= @linkable_content_blocks.map{|cb| "{ title: '#{cb.name}', value: '#{cb.id}' }" }.join(', ').html_safe %>
],
target_list: [
  { title: 'Default', value: '' },
  <%= @linkable_content_areas.map{|ca| "{ title: '#{ca.name}', value: '#{ca.id}' }" }.join(', ').html_safe %>
],
link_title: false,
//menubar: false,
min_height: 700,
image_caption: true,
image_advtab: true,
image_list: [
  <%= @linkable_images.map{|i| "{ title: '#{i.file_file_name}', value: '#{i.file.url}' }"}.join(', ').html_safe %>
],
image_class_list: [
  { title: 'None', value: '' },
  { title: 'Big Left Image', value: 'big-left-image' },
  { title: 'Big Right Image', value: 'big-right-image' },
  { title: 'Full Screen Image (stretch)', value: 'full-screen-image' },
  { title: 'Full Screen Image (fill vertical)', value: 'full-height-image' },
  { title: 'Full Screen Image (fill horizontal)', value: 'full-width-image' }
],
image_description: false,
image_prepend_url: '',
relative_urls: false,
media_alt_source: false,
media_dimensions: false,
media_filter_html: false,
verify_html: false,
content_style: $('style.css-in-tinymce').map(function(){return($(this).html());}).toArray().join("\n"),
