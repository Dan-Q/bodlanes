<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @presentation.name %>
</p>

<div>
  <iframe width="<%= @presentation.template.screen_type.width %>" height="<%= @presentation.template.screen_type.height %>" src="<%= preview_presentation_path(@presentation) %>?zoom=<%= @presentation.template.screen_type.default_zoom %>" style="zoom: <%= @presentation.template.screen_type.default_zoom %>;"></iframe>
</div>

<ul>
  <%= render partial: 'actions', locals: { presentation: @presentation } %>
  <li><%= link_to 'Back', presentations_path %></li>
</ul>